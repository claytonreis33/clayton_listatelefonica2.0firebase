<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.projeto.agendatelefonica.controller.ListarContatosGrupos">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/barra_main" />

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listViewGrupoContatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/btFloatContatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_action_plus"
            fab:fab_colorNormal="@color/colorTextIcon"
            fab:fab_colorPressed="@color/colorPrimary"/>

    </FrameLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.projeto.agendatelefonica.controller.LoginContato">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:layout_weight="1"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Área de Autenticação"
        android:textSize="27sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5" />

    <EditText
        android:id="@+id/emailCadastro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:layout_weight="0.5"/>

    <EditText
        android:id="@+id/senhaCadastro"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Senha"
        android:layout_weight="0.5"/>

    <EditText
        android:id="@+id/nomeCadastro"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Nome"
        android:layout_weight="0.5"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btEntrar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Entrar"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"/>

    <Button
        android:id="@+id/btCadastrar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Cadastrar"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:visibility="gone"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@color/colorPrimary"
        android:id="@+id/btCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ou cadastre-se"
        android:layout_gravity="right"
        android:layout_weight="0.1"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@color/colorPrimary"
        android:id="@+id/btLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ou logar-se"
        android:layout_gravity="right"
        android:layout_weight="0.1"
        android:visibility="gone"/>
</LinearLayout>
